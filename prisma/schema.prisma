// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model Bundle {
  id                  String        @id @default(cuid())
  name                String
  description         String?
  imageUrl            String?
  discountType        String?       // percentage, fixed
  discountValue       Float?        // 20%, 200USD
  active              Boolean       @default(false)
  startDate           DateTime?
  endDate             DateTime?
  shopDomain          String
  priority            Int           @default(0) // Higher number = Higher priority
  
  originalTotalPrice  Float?        // Tong gia truoc khi discount
  bundlePrice         Float?        // Gia sau khi discount

  items               BundleItem[]
  bundleProductGid    String?       // Bundle nhưng được Shopify hiểu là 1 Product

  labels              BundleLabel[] // Explicit Many-to-Many

  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt

  @@index([shopDomain])
  @@index([active])
}

model Label {
  id               String   @id @default(cuid())
  name             String   // Internal name
  text             String   // Text to display
  icon             String?  // Polaris icon type
  priority         Int      @default(0) // Higher number = Higher priority
  
  // Appearance
  bgColor          String   @default("#000000")
  textColor        String   @default("#ffffff")
  position         String   @default("top-left") // top-left, top-right, bottom-left, bottom-right
  shape            String   @default("rounded")  // rounded, square, pill
  
  // Visibility
  showOnPDP        Boolean  @default(true)
  showOnCollection Boolean  @default(true)
  
  shopDomain       String
  bundles          BundleLabel[]

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([shopDomain])
}

model BundleLabel {
  bundleId String
  labelId  String
  bundle   Bundle @relation(fields: [bundleId], references: [id], onDelete: Cascade)
  label    Label  @relation(fields: [labelId], references: [id], onDelete: Cascade)

  @@id([bundleId, labelId])
  @@index([bundleId])
  @@index([labelId])
}

model BundleItem {
  id              String   @id @default(cuid())
  bundleId        String
  bundle          Bundle   @relation(fields: [bundleId], references: [id], onDelete: Cascade)
  
  productId       String   // Shopify product ID
  handle          String?  // Product Handle for storefront mapping
  variantId       String?  // optional Shopify variant ID (storefront numeric or gid as needed)
  quantity        Int      @default(1)

  productTitle    String?
  variantTitle    String?
  price           Float?
  imageUrl        String?
  available       Boolean?

  createdAt       DateTime @default(now())

  @@index([bundleId])
  @@index([productId])
  @@index([handle])
}
